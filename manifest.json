{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "An extension with tabs, storage, DOM manipulation, and script injection capabilities.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webRequest",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon16.png",
      "128": "assets/icon16.png"
    }
  },
  "content_scripts": [
    {
      "type": "module",
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
